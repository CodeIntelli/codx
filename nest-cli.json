{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": {
      "class": false,
      "module": false,
      "service": false
    }
  },
  "compilerOptions": {
    "assets": ["templates/**"],
    "watchAssets": true
  }
}
